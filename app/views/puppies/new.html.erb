
  <div class="form__page">
    <div class="container ">
      <div class="row jumbotron">
         <div class="col-xs-12 col-md-6 col-md-offset-3 ">
          <div class="form">
            <div class="form__title">
              <h2>Sign up</h2>
            </div>
              <div class="form__content">
              <%= simple_form_for @puppy do |f| %>
              <%= f.input :name %>
              <%= f.input :age  %>
              <%= f.input :gender  %>
              <%= f.association :breed  %>
              <div class="form-actions">
                <%= f.button :submit, "Add a Puppy", class:'form__submit'%>
              </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

