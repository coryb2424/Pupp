<div class='container'>
  <div id='row'>
    <div class="cards-container">
      <% @puppies.each do |puppy| %>
      <div class="col-xs-12 col-sm-4">
        <div style="background-image: url(<%= puppy.photo %>)" class="card-div"  >
          <div class="card-title">
            <%= puppy.name.capitalize%>
          </div>

          <div class="card-icons">
            <div>
              <%= link_to "<i class='fas fa-plus'></i>".html_safe, puppy_path(puppy) %>
            </div>
            <div>
              <%= link_to "<i class='fas fa-heart'></i>".html_safe, puppy_path(puppy) %>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
